@model OnlineShop.Models.User.LoginModel

<form asp-controller="Users" asp-action="Login" class="card">
    <div class="card-body">
        <div class="mb-4">
            <label class="form-label" for="username">Username</label>
            <input asp-for="Username" class="form-control" id="username" placeholder="Your username">
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="mb-4">
            <label class="form-label" for="password">Password</label>
            <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Password"
                autocomplete="current-password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mb-4">
            <div class="form-check">
                <input asp-for="Keep" class="form-check-input" type="checkbox" id="keep">
                <label class="form-check-label" for="keep">
                    Keep me logged in
                </label>
            </div>
        </div>
        <div>
            <button type="submit" class="btn btn-primary w-full">
                Login
            </button>
        </div>
    </div>
</form>
