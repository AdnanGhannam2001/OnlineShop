@using OnlineShop.Models.Components
@model PaginationModel

@{
    var pages = Model.Total / Model.Size;
}

@if (pages > 1)
{
<nav class="d-flex justify-content-center my-4">
<ul class="pagination">
    <li class="page-item @(Model.Number == 0 ? "disabled": "")">
    <a class="page-link"
        asp-route-pageNumber="@(Model.Number - 1)"
        aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
        <span class="sr-only">Previous</span>
    </a>
    </li>
    @for (int i = 0; i < pages; ++i)
    {
        <li class="page-item @(Model.Number == i ? "active" : "")">
            <a class="page-link" asp-route-pageNumber="@i">@i</a>
        </li>
    }
    <li class="page-item @(Model.Number == pages - 1 ? "disabled": "")">
    <a class="page-link"
        asp-route-pageNumber="@(Model.Number + 1)"
        aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
        <span class="sr-only">Next</span>
    </a>
    </li>
</ul>
</nav>
}
